<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".homeTabs.search.view.SearchFragment">
    <androidx.constraintlayout.widget.Group
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mainGp"
        app:constraint_referenced_ids="searchEditText,filters,chipGroup,rv"
        />
    <androidx.constraintlayout.widget.Group
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Gp2"
        app:constraint_referenced_ids="logo"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="42dp"
        android:drawableStart="@drawable/search24"
        android:drawableTint="@color/primary"
        android:drawablePadding="8dp"
        android:layout_marginHorizontal="16dp"
        android:hint="Search"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingStart="8dp"
        android:padding="8dp"
        android:background="@drawable/custom_edittext"
        android:id="@+id/searchEditText"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:text="Search By"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/searchEditText"
        android:id="@+id/filters"/>
    <com.google.android.material.chip.ChipGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/filters"
        app:singleSelection="true"
        android:layout_marginStart="16dp"
        android:id="@+id/chipGroup"
        >
        <com.google.android.material.chip.Chip
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category"
            android:id="@+id/chipCategory"
            app:chipBackgroundColor="@color/primary"
            android:textColor="@color/white"
            style="@style/Widget.Material3.Chip.Filter"
            />
        <com.google.android.material.chip.Chip
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Country"
            android:id="@+id/chipCoountry"
            android:textColor="@color/white"
            app:chipBackgroundColor="@color/primary"
            style="@style/Widget.Material3.Chip.Filter"
            />
        <com.google.android.material.chip.Chip
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ingredient"
            app:chipBackgroundColor="@color/primary"
            android:textColor="@color/white"
            android:id="@+id/chipIngredient"
            style="@style/Widget.Material3.Chip.Filter"

            />
    </com.google.android.material.chip.ChipGroup>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/chipGroup"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
       android:paddingTop="8dp"
        android:id="@+id/rv"
        />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/dissconnecton_b" />
</androidx.constraintlayout.widget.ConstraintLayout>